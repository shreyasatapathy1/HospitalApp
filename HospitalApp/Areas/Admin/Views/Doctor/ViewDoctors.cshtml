@model IEnumerable<HospitalApp.Models.Doctor>

@{
    ViewData["Title"] = "ViewDoctors";
}

<h1>ViewDoctors</h1>

<p>
    <a asp-action="AddDoctor">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Specialty)
            </th>
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.ContactNumber) *@
            @* </th> *@
            <th>
                @Html.DisplayNameFor(model => model.ExperienceInYears)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualifications)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty)
            </td>
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => item.ContactNumber) *@
            @* </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.ExperienceInYears)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualifications)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
