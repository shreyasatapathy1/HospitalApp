@model IEnumerable<HospitalApp.Models.ViewModel.AdminAppointmentViewModel>

<h2 class="text-center my-4">Manage Appointments</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Patient Name</th>
                <th>Doctor Name</th>
                <th>Date</th>
                <th>Time Slot</th>
                <th>Status</th>
                <th>Payment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.PatientName</td>
                    <td>@appointment.DoctorName</td>
                    <td>@appointment.AppointmentDate.ToString("dd-MM-yyyy")</td>
                    <td>@appointment.TimeSlot</td>
                    <td>@appointment.Status</td>
                    <td>@appointment.PaymentMethod</td>
                    <td>
                        <a href="#" class="btn btn-warning btn-sm">Edit</a>
                        <a href="#" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
